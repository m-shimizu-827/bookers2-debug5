<% if @user_or_book == "1" %>
    <h1>User</h1>
    <table class="table table-hover table-inverse">
            <thead>
                 <tr>
                    <th>image</th>
                    <th>name</th>
                    <th></th>
                        
                </tr>
            </thead>
            <tbody>
                <% @users.each do |user| %>
                    <tr>
                        <td><%= attachment_image_tag(user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
                        <td> <%= user.name %></td>
                            
                        <td><%= link_to "Show", user, class: "user_#{user.id}" %></td>
                    </tr>

                <% end %>
            </tbody>
        </table>
 
    <% elsif @user_or_book == "2" %>
        <h2>Book</h2>
        <table class="table table-hover table-inverse">
            <thead>
                 <tr>
                    <th>image</th>
                    <th>name</th>
                    <th></th>
                        
                </tr>
            </thead>
            <tbody>
                <% @books.each do |book| %>
                    <tr>
                        <td><%= attachment_image_tag(book.user, :profile_image, :fill, 50, 50, fallback: "no-image-mini.jpg") %></td>
                        <td> <%= book.title %></td>
                            
                        <td><%= link_to "Show", book, class: "user_#{book.id}" %></td>
                    </tr>

                <% end %>
            </tbody>
        </table>



    <% else %>
<% end %>